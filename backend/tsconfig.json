{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "strict": true,
    "target": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "lib": [
      "es2018",
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules"
  ],

  "include": ["src/**/*.ts"]
}
